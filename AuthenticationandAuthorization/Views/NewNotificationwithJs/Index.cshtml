@model NewMessageApplicationUser
@{
    ViewData["Title"] = "Index";
}


<div class="wrapper">
    <div class="container">
        <div class="inner-wrapper ">
            <h1>Send Message</h1>
            <div class="row">
                <div class="col-md-6">

                    <h1>Index</h1>

                    <form asp-controller="NewNotificationwithJs" asp-action="SentRapidMsg" method="post">
                        <div class="form-group">
                            @Html.DropDownListFor(x => x.ApplicationUserId, ViewBag.MembershipList as SelectList, "Select Membership type", new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label asp-for="NewMessage.Subject">Subject</label>
                            <input name="NewMessage.Subject" class="form-control" />

                        </div>

                        <div class="form-group">
                            <label asp-for="NewMessage.MessageText">Text</label>
                            <input name="NewMessage.MessageText" class="form-control" />

                        </div>



                        <div class="form-group">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i> Save</button>
                        </div>
                    </form>


                </div>
            </div>
         </div>
     </div>
</div>


