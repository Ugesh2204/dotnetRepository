@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "EditUsersInRole";
}

@{ 
    var roleId = ViewBag.roleId;
}


<form method="post">
<div class="card">
    <div class="card-header">
        <h2>Add or remove users form this role</h2>
    </div>

    <p>When we need a form  inside  a for loop we can do it this way</p>
    <p> When we click on the name the check box toggle we achive asp-for="Model[i].IsSelected" this by add this to labale</p>
    <div class="card-body">
        @for (int i = 0; i < Model.Count; i++)
        {
        <div class="form-check m-1">
            <input type="hidden" asp-for="@Model[i].UserId" />
            <input type="hidden" asp-for="@Model[i].UserName" />

            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                @Model[i].UserName
            </label>
        </div>
        }
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="EditUsersInRole" asp-route-id="@roleId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</div>
</form>