@model List<Watchlist>

<h2>My Watchlists</h2>

@if (Model.Count > 0)
{

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Pet Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var watchlist in @Model)
                {
                    <tr>
                        <td>
                            @watchlist.Id
                        </td>
                        <td>
                            @watchlist.Pet.Name
                        </td>
                        <td>
                            <a asp-action="Remove" asp-controller="Watchlist" asp-route-id="@watchlist.Id">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>You have no pets in your watchlist.</p>
}