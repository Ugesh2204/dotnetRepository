@model Message
@{
    ViewData["Title"] = "CreateMessage";
}

<h1>CreateMessage</h1>


<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="AjaxNotification" asp-action="CreateMessage" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MessageHeader" class="control-label"></label>
                <input asp-for="MessageHeader" class="form-control" />
                <span asp-validation-for="MessageHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MessageBody" class="control-label"></label>
                <input asp-for="MessageBody" class="form-control" />
                <span asp-validation-for="MessageBody" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

